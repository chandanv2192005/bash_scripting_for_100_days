#!/bin/bash
# === Duplicate File Finder ===
# Groups files with identical sha256 checksums.
# Usage: ./dup_find.sh <dir>
set -euo pipefail
DIR="${1:-.}"
find "$DIR" -type f -print0 | xargs -0 sha256sum | sort | awk '
{hash=$1; $1=""; file=substr($0,2); dup[hash]=dup[hash] ? dup[hash] ORS file : file}
END{ 
for(h in dup){
n=split(dup[h],a,/\n/)
if(n>1){
print "== Duplicate group =="
for(i in a) print a[i]
print ""
}
}
